{
  "uid": "cloudmesh-table",
  "title": "CloudMesh Domain Mapping Table",
  "timezone": "browser",
  "schemaVersion": 37,
  "version": 1,
  "refresh": "10s",
  "templating": {
    "list": [
      {
        "name": "domain",
        "type": "query",
        "datasource": "prometheus",
        "refresh": 1,
        "query": "label_values(cloudmesh_domain_mapping_info, domain)",
        "includeAll": true,
        "multi": true,
        "sort": 1
      }
    ]
  },
  "panels": [
    {
      "type": "stat",
      "title": "Total Domains",
      "datasource": "prometheus",
      "targets": [
        {
          "expr": "cloudmesh_domains_total",
          "refId": "A"
        }
      ],
      "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 }
    },
    {
      "type": "stat",
      "title": "Total A Records",
      "datasource": "prometheus",
      "targets": [
        {
          "expr": "cloudmesh_a_records_total",
          "refId": "B"
        }
      ],
      "gridPos": { "x": 6, "y": 0, "w": 6, "h": 4 }
    },
    {
      "type": "stat",
      "title": "Matched Servers",
      "datasource": "prometheus",
      "targets": [
        {
          "expr": "cloudmesh_matched_servers_total",
          "refId": "C"
        }
      ],
      "gridPos": { "x": 12, "y": 0, "w": 6, "h": 4 }
    },
    {
      "type": "stat",
      "title": "Unmatched IPs",
      "datasource": "prometheus",
      "targets": [
        {
          "expr": "cloudmesh_unmatched_ips_total",
          "refId": "D"
        }
      ],
      "gridPos": { "x": 18, "y": 0, "w": 6, "h": 4 }
    },
    {
      "type": "stat",
      "title": "Script Errors",
      "datasource": "prometheus",
      "targets": [
        {
          "expr": "cloudmesh_script_errors_total",
          "refId": "E"
        }
      ],
      "gridPos": { "x": 0, "y": 4, "w": 6, "h": 4 }
    },
    {
      "type": "stat",
      "title": "Avg Server Uptime (hrs)",
      "datasource": "prometheus",
      "targets": [
        {
          "expr": "avg(cloudmesh_server_uptime_seconds) / 3600",
          "refId": "F"
        }
      ],
      "gridPos": { "x": 6, "y": 4, "w": 6, "h": 4 }
    },
    {
      "type": "stat",
      "title": "Avg DNS TTL (s)",
      "datasource": "prometheus",
      "targets": [
        {
          "expr": "avg(cloudmesh_dns_ttl_seconds)",
          "refId": "G"
        }
      ],
      "gridPos": { "x": 12, "y": 4, "w": 6, "h": 4 }
    },
    {
      "type": "stat",
      "title": "Healthy Servers (%)",
      "datasource": "prometheus",
      "targets": [
        {
          "expr": "100 * sum(cloudmesh_server_health_status) / count(cloudmesh_server_health_status)",
          "refId": "H"
        }
      ],
      "gridPos": { "x": 18, "y": 4, "w": 6, "h": 4 }
    },
    {
      "type": "table",
      "title": "Domain Mapping Table",
      "datasource": "prometheus",
      "targets": [
        {
          "expr": "cloudmesh_domain_mapping_info{domain=~\"$domain\"}",
          "format": "table",
          "refId": "A"
        }
      ],
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "Time": true,
              "__name__": true,
              "created": true,
              "domain": true,
              "exported_job": true,
              "instance": true
            },
            "order": [
              "subdomain",
              "ip",
              "project",
              "server_name",
              "status",
              "server_type",
              "price_monthly",
              "traffic_mb",
              "labels"
            ]
          }
        }
      ],
      "options": {
        "showHeader": true,
        "showSearch": true,
        "showFilters": true
      },
      "fieldConfig": {
        "defaults": {},
        "overrides": []
      },
      "gridPos": { "x": 0, "y": 8, "w": 24, "h": 16 }
    }
  ]
}
